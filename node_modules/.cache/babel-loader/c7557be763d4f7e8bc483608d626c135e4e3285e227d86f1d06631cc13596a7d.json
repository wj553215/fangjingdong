{"ast":null,"code":"import { reactive, toRefs } from 'vue';\n// useRouter整个大路由信息 useRout访问路径信息\nimport { useRouter, useRoute } from 'vue-router';\nimport ShopInfo from '../../components/ShopInfo';\nimport { get } from '../../utils/request';\nimport Content from './Content';\nimport Cart from './Cart';\n\n// 获取当前商品信息\nconst useShopInfoEffrct = () => {\n  const route = useRoute();\n  const data = reactive({\n    item: {}\n  });\n  const getItemData = async () => {\n    const result = await get(`/api/shop/${route.params.id}`);\n    if (result?.errno === 0 && result?.data) {\n      data.item = result.data;\n    }\n  };\n  const {\n    item\n  } = toRefs(data);\n  return {\n    item,\n    getItemData\n  };\n};\n// 回退\nconst useBackRouterEffect = () => {\n  const router = useRouter();\n  const handleBackClick = () => {\n    router.back();\n  };\n  return {\n    handleBackClick\n  };\n};\nexport default {\n  name: 'Shop',\n  components: {\n    ShopInfo,\n    Content,\n    Cart\n  },\n  setup() {\n    const {\n      item,\n      getItemData\n    } = useShopInfoEffrct();\n    const {\n      handleBackClick\n    } = useBackRouterEffect();\n    // 获取一次数据\n    getItemData();\n    return {\n      item,\n      handleBackClick\n    };\n  }\n};","map":{"version":3,"names":["reactive","toRefs","useRouter","useRoute","ShopInfo","get","Content","Cart","useShopInfoEffrct","route","data","item","getItemData","result","params","id","errno","useBackRouterEffect","router","handleBackClick","back","name","components","setup"],"sources":["D:\\WEB\\project\\jingdong\\src\\views\\shop\\Shop.vue"],"sourcesContent":["<template>\r\n  <div class=\"wrapper\">\r\n    <div class=\"search\">\r\n      <div class=\"search__back iconfont\" @click=\"handleBackClick\">&#xe600;</div>\r\n      <div class=\"search__content\">\r\n        <span class=\"search__content__icon iconfont\">&#xe62d;</span>\r\n        <input class=\"search__content__input\" placeholder=\"请输入商品名称\" />\r\n      </div>\r\n    </div>\r\n    <ShopInfo :item=\"item\" :hideBorder=\"true\" v-show=\"item.imgUrl\" />\r\n    <Content :shopName=\"item.name\" />\r\n    <Cart />\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport { reactive, toRefs } from 'vue'\r\n// useRouter整个大路由信息 useRout访问路径信息\r\nimport { useRouter, useRoute } from 'vue-router'\r\nimport ShopInfo from '../../components/ShopInfo'\r\nimport { get } from '../../utils/request'\r\nimport Content from './Content'\r\nimport Cart from './Cart'\r\n\r\n// 获取当前商品信息\r\nconst useShopInfoEffrct = () => {\r\n  const route = useRoute()\r\n  const data = reactive({ item: {} })\r\n  const getItemData = async () => {\r\n    const result = await get(`/api/shop/${route.params.id}`)\r\n    if (result?.errno === 0 && result?.data) {\r\n      data.item = result.data\r\n    }\r\n  }\r\n  const { item } = toRefs(data)\r\n  return { item, getItemData }\r\n}\r\n// 回退\r\nconst useBackRouterEffect = () => {\r\n  const router = useRouter()\r\n  const handleBackClick = () => {\r\n    router.back()\r\n  }\r\n  return { handleBackClick }\r\n}\r\n\r\nexport default {\r\n  name: 'Shop',\r\n  components: { ShopInfo, Content, Cart },\r\n  setup () {\r\n    const { item, getItemData } = useShopInfoEffrct()\r\n    const { handleBackClick } = useBackRouterEffect()\r\n    // 获取一次数据\r\n    getItemData()\r\n    return { item, handleBackClick }\r\n  }\r\n}\r\n</script>\r\n\r\n<style lang=\"scss\" scoped>\r\n@import \"../../style/viriables.scss\";\r\n\r\n.wrapper {\r\n  padding: 0 .18rem;\r\n  margin-bottom: .12rem;\r\n}\r\n\r\n.search {\r\n  display: flex;\r\n  margin: .14rem 0 .12rem 0;\r\n  line-height: .32rem;\r\n\r\n  &__back {\r\n    width: .3rem;\r\n    font-size: .24rem;\r\n    color: #000;\r\n  }\r\n\r\n  &__content {\r\n    display: flex;\r\n    flex: 1;\r\n    background: $search-bgColor;\r\n    border-radius: .16rem;\r\n\r\n    &__icon {\r\n      width: .44rem;\r\n      text-align: center;\r\n      margin-top: .03rem;\r\n    }\r\n\r\n    &__input {\r\n      display: block;\r\n      width: 100%;\r\n      padding-right: .2rem;\r\n      border: none;\r\n      outline: none;\r\n      background: none;\r\n      height: .32rem;\r\n      font-size: .14rem;\r\n      color: $content-fontcolor;\r\n\r\n      &::placeholder {\r\n        color: $search-fontColor;\r\n      }\r\n    }\r\n  }\r\n}\r\n</style>\r\n"],"mappings":"AAgBA,SAASA,QAAQ,EAAEC,MAAK,QAAS,KAAI;AACrC;AACA,SAASC,SAAS,EAAEC,QAAO,QAAS,YAAW;AAC/C,OAAOC,QAAO,MAAO,2BAA0B;AAC/C,SAASC,GAAE,QAAS,qBAAoB;AACxC,OAAOC,OAAM,MAAO,WAAU;AAC9B,OAAOC,IAAG,MAAO,QAAO;;AAExB;AACA,MAAMC,iBAAgB,GAAIA,CAAA,KAAM;EAC9B,MAAMC,KAAI,GAAIN,QAAQ,EAAC;EACvB,MAAMO,IAAG,GAAIV,QAAQ,CAAC;IAAEW,IAAI,EAAE,CAAC;EAAE,CAAC;EAClC,MAAMC,WAAU,GAAI,MAAAA,CAAA,KAAY;IAC9B,MAAMC,MAAK,GAAI,MAAMR,GAAG,CAAE,aAAYI,KAAK,CAACK,MAAM,CAACC,EAAG,EAAC;IACvD,IAAIF,MAAM,EAAEG,KAAI,KAAM,KAAKH,MAAM,EAAEH,IAAI,EAAE;MACvCA,IAAI,CAACC,IAAG,GAAIE,MAAM,CAACH,IAAG;IACxB;EACF;EACA,MAAM;IAAEC;EAAK,IAAIV,MAAM,CAACS,IAAI;EAC5B,OAAO;IAAEC,IAAI;IAAEC;EAAY;AAC7B;AACA;AACA,MAAMK,mBAAkB,GAAIA,CAAA,KAAM;EAChC,MAAMC,MAAK,GAAIhB,SAAS,EAAC;EACzB,MAAMiB,eAAc,GAAIA,CAAA,KAAM;IAC5BD,MAAM,CAACE,IAAI,EAAC;EACd;EACA,OAAO;IAAED;EAAgB;AAC3B;AAEA,eAAe;EACbE,IAAI,EAAE,MAAM;EACZC,UAAU,EAAE;IAAElB,QAAQ;IAAEE,OAAO;IAAEC;EAAK,CAAC;EACvCgB,KAAIA,CAAA,EAAK;IACP,MAAM;MAAEZ,IAAI;MAAEC;IAAY,IAAIJ,iBAAiB,EAAC;IAChD,MAAM;MAAEW;IAAgB,IAAIF,mBAAmB,EAAC;IAChD;IACAL,WAAW,EAAC;IACZ,OAAO;MAAED,IAAI;MAAEQ;IAAgB;EACjC;AACF"},"metadata":{},"sourceType":"module","externalDependencies":[]}